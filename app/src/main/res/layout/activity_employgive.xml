<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context=".employgive">

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Employment Services"
        android:background="#ff4081"
        android:textColor="#FFFFFF"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:textAlignment="center"/>



<TextView
        android:id="@+id/categoryhead"
        android:layout_width="250dp"

        android:layout_height="40dp"
        android:text="Categories:"
        android:background="@drawable/rounded_editpink"
        android:textColor="#FFFF00"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="85dp"
        android:textAlignment="center"/>

    <Spinner
        android:id="@+id/spincats"
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/edittext_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvworkers"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:background="@drawable/rounded_editpink"
        android:textColor="#FFFF00"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:text="No of Workers" />

    <EditText
        android:id="@+id/workernos"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:hint="number"
        android:background="@drawable/edittext_border"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/address"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:background="@drawable/rounded_editpink"
        android:textColor="#FFFF00"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="Enter Work Area" />

    <EditText
        android:id="@+id/workplaces"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_border"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:hint="Address" />

    <TextView
        android:id="@+id/tvphone"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="Enter Phone Number"
        android:textAlignment="center"
        android:background="@drawable/rounded_editpink"
        android:textColor="#FFFF00"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>
    <EditText

        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/ownerphones"
        android:hint="Phone Number"
        android:background="@drawable/edittext_border"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="25dp" />

    <Button
        android:id="@+id/empsubmit"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_green"
        android:onClick="empsub"
        android:text="Submit"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:textStyle="bold" />



</LinearLayout>
